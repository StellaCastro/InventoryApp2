<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Item_viewer"
    android:background="@color/baby_blue">
        <LinearLayout
            style="@style/viewer_item_parents"
            android:layout_marginBottom="@dimen/margin16">
            <TextView
                style="@style/viewer_item_titles"
                android:text="@string/item_name"/>
            <TextView
                style="@style/viewer_item_info"
                android:id="@+id/product_name"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/viewer_item_titles"
                    android:text="@string/item_price" />
                <TextView
                    style="@style/viewer_item_info"
                    android:id="@+id/price" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/viewer_item_titles"
                    android:text="@string/item_seller"/>
                <TextView
                    style="@style/viewer_item_info"
                    android:id="@+id/seller" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/viewer_item_parents"
            android:layout_marginTop="@dimen/margin_25">
            <TextView
                style="@style/viewer_item_titles"
                android:text="@string/contact" />
            <TextView
                style="@style/viewer_item_info"
                android:id="@+id/phone" />
        </LinearLayout>
        <LinearLayout
            style="@style/viewer_item_parents"
            android:layout_marginTop="@dimen/margin_25">
            <TextView
                style="@style/viewer_item_titles"
                android:text="@string/item_quantity" />
            <TextView
                style="@style/viewer_item_info"
                android:id="@+id/quantity" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25">
            <TextView
                style="@style/button_item_viewer"
                android:layout_weight="1"
                android:layout_width="@dimen/zero"
                android:text="@string/remove"
                android:id="@+id/remove" />
            <TextView
                style="@style/button_item_viewer"
                android:layout_weight="1"
                android:layout_width="@dimen/zero"
                android:layout_marginLeft="@dimen/marging_8"
                android:text="@string/add"
                android:id="@+id/add_more" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/button_item_viewer"
                android:layout_width="match_parent"
                android:text="@string/order_more"
                android:layout_marginTop="@dimen/marging_8"
                android:id="@+id/order_more" />
            <TextView
                style="@style/button_item_viewer"
                android:layout_width="match_parent"
                android:text="Edit Item"
                android:layout_marginTop="@dimen/marging_8"
                android:id="@+id/edit_item" />
            <TextView
                style="@style/button_item_viewer"
                android:layout_width="match_parent"
                android:text="Delete Item"
                android:layout_marginTop="@dimen/marging_8"
                android:id="@+id/delete_item" />
        </LinearLayout>

    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/babyblue"
    tools:context=".ItemCatalogActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:clickable="true"
        android:focusable="true"
        android:dividerHeight="@dimen/divider"
        android:divider="@color/black"
        android:id="@+id/list">
    </ListView>

    <RelativeLayout
        android:id="@+id/warehouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/empty_warehouse_image"
            android:layout_width="@dimen/bug_w"
            android:layout_height="@dimen/bug_h"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/spiders" />

        <TextView
            android:id="@+id/empty_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_warehouse_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="@dimen/margin16"
            android:text="@string/empty_messege"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_title_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="@dimen/marging_8"
            android:text="@string/lets_start"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/black" />
    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/fabw"
        android:layout_height="@dimen/fabh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin26"
        android:scaleType="center"
        android:src="@drawable/ic_action_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin26" />

</RelativeLayout>